{
  "name": "template-bun",
  "description": "A template for Bun projects",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-bun"
  },
  "keywords": ["bun", "template"],
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "start": "bun src/main.ts",
    "test:cov": "bun test --coverage",
    "test:ci": "rm -rf coverage && bun test --bail --coverage --coverage-reporter=lcov",
    "tidy": "bun biome check --write src test",
    "typecheck": "bun tsc --noEmit",
    "prepare": "bun husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/bun": "^1.1.14",
    "husky": "^9.1.7",
    "typescript": "^5.7.2"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
